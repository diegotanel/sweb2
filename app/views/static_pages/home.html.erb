<h1>Iniciar nueva solicitud</h1>
<%= link_to t('Funcionamiento de sala'), new_funcionamiento_sala_v2_path, class: "btn btn-large btn-small" %>
</br>
</br>
<%= link_to t('Grupo comunitario'), new_funcionamiento_sala_v2_path, class: "btn btn-large btn-small" %>
</br>

<h1>Solicitudes Borrador</h1>

<table class="table table-striped">
  <tr>
    <th>Número de formulario</th>
    <th>Tipo de solicitud</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <%= content_tag_for(:tr, @func_sala_v2_borradores) do |func_sala| %>

    <td><%= func_sala.id %></td>
    <td><%= FuncionamientoSalaV2::ESTADOS.key(func_sala.estado)%></td>
     <td><%= link_to "ver", funcionamiento_sala_v2_path(func_sala) %></td>
    <td><%= link_to "Editar", edit_funcionamiento_sala_v2_path(func_sala) %></td>
    <td><%= link_to "Enviar", enviar_funcionamiento_sala_v2_path(func_sala) %></td>
    <td><%= link_to 'Cancelar', func_sala, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
  <% end %>
   
</table>

<h1>Solicitudes Enviadas</h1>

<table class="table table-striped">
  <tr>
    <th>Número de formulario</th>
    <th>Tipo de solicitud</th>
  </tr>

  <%= content_tag_for(:tr, @func_sala_v2_enviados) do |func_sala| %>
  <% if func_sala.estado == 1 %>
	    <td><%= func_sala.id %></td>
	    <td><%= FuncionamientoSalaV2::ESTADOS.key(func_sala.estado)%></td>
   <% end %>
  <% end %>
   
</table>