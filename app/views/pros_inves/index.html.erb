#encoding: utf-8
<% provide(:title, 'Lista de solicitudes de subsidio para proyecto de investigación') %>
<h1>Lista de solicitudes de subsidio para proyecto de investigación</h1></br>

<table class="table table-striped">
  <tr>
    <th>Fecha</th>
    <th>Número de Cuit del solicitante</th>
    <th>Estado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <%= content_tag_for(:tr, @tramites) do |tramite| %>
    <% if ProInves.find(tramite.tramitable_id).estado == 2 %>
      <td><%= I18n.l(ProInves.find(tramite.tramitable_id).created_at) %></td>
      <td><%= ProInves.find(tramite.tramitable_id).num_cuit %></td>
      <td><%= ProInves::ESTADOS.key(ProInves.find(tramite.tramitable_id).estado) %></td>

      <td><%= link_to t("scaffoldi18n.show"), pro_inves_path(tramite.tramitable_id) %></td>
      <td><%= link_to t("scaffoldi18n.edit"), edit_pro_inves_path(tramite.tramitable_id) %></td>
      <td><%= link_to t("scaffoldi18n.destroy"), pro_inves_path(tramite.tramitable_id), :data => {confirm: t("scaffoldi18n.are_you_sure?")}, method: :delete %></td>
    <% else %>
      <td><%= I18n.l(ProInves.find(tramite.tramitable_id).created_at) %></td>
      <td><%= ProInves.find(tramite.tramitable_id).num_cuit %></td>
      <td><%= ProInves::ESTADOS.key(ProInves.find(tramite.tramitable_id).estado) %></td>

      <td><%= link_to t("scaffoldi18n.show"), pro_inves_path(tramite.tramitable_id) %></td>  
    <% end %>   
  <% end %>
</table>
<%= link_to t('Nueva solicitud'), new_pro_inves_path, class: "btn btn-large btn-small" %>
</br>
</br>