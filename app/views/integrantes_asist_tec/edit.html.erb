#encoding: utf-8
<% provide(:title, 'Editar formulario para integrante del grupo para Asistencia Técnica') %>
<h1>Editar formulario para integrante del grupo para Asistencia Técnica</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for([@asist_tec, @integrante]) do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>
      <%= f.label :nombre, "Nombre" %>
      <%= f.text_field :nombre, :value => @nombre_integrante, :readonly => true %>

      <%= f.label :apellido, "Apellido" %>
      <%= f.text_field :apellido, :value => @apellido_integrante, :readonly => true %>

      <%= f.label :dni, "Número de Cuil" %>
      <%= f.text_field :dni, :value => @num_cuit_integrante, :readonly => true %>

      <%= f.label :fecha_nacimiento, "Fecha de nacimiento" %>
      <%= f.date_select :fecha_nacimiento, start_year: 1920, end_year: 2004 ,order: [:day, :month, :year], :value => @fecha_nacimiento_integrante, :readonly => true %>

      <%= f.label :domicilio, "Domicilio" %>
      <%= f.text_field :domicilio, :value => @domicilio_integrante, :readonly => true %>

      <%= f.label :email, "Correo Electrónico" %>
      <%= f.text_field :email, :value => @email_integrante, :readonly => true %>

      <%= f.label :telefono, "Teléfono" %>
      <%= f.text_field :telefono, :value => @telefono_integrante, :readonly => true %>

      <%= f.label :rol, "Rol" %>
      <%= f.text_field :rol %>
      </br>

      <%= f.submit "Confirmar cambios", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

</br>
</br>
<%= link_to t('Volver'), asist_tec_integrantes_asist_tec_path %>