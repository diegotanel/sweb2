#encoding: utf-8
<% provide(:title, "Editar Usuario") %>
<h1>Actualización de perfil</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', :object => f.object %>

      <%= f.label :name, "Nombre" %>
      <%= f.text_field :name %>

      <%= f.label :last_name, "Apellido" %>
      <%= f.text_field :last_name %>

      <%= f.label :email, "Email" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Nueva Contraseña" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmar Contraseña" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Guardar cambios", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>